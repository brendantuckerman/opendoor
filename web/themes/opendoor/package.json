{
    "name": "Open Door",
    "version": "1.0.0",
    "description": "An inclusion-first theme for The Drupal front-end",
    "scripts": {
        "build": "npm run build:css",
        "build:css": "postcss \"css/**/*.pcss.css\" --base css/ --dir css/ --ext .css --verbose",
        "watch": "nodemon --watch css --ext pcss.css --exec \"npm run build:css\" --verbose",
        "lint:css": "stylelint \"css/**/*.pcss.css\"",
        "clean": "del-cli \"css/**/*.css\" \"!css/**/*.pcss.css\""
      },
    "keywords": [
      "drupal",
      "theme",
      "postcss",
      "asseccibility"
    ],
    "author": "Brendan Tuckerman",
    "license": "MIT",
    "devDependencies": {
        "autoprefixer": "^10.4.14",
        "cssnano": "^6.0.1",
        "del-cli": "^5.1.0",
        "nodemon": "^3.0.1",
        "postcss": "^8.4.24",
        "postcss-cli": "^10.1.0",
        "postcss-custom-properties": "^13.2.1",
        "postcss-import": "^15.1.0",
        "postcss-nested": "^6.0.1",
        "postcss-preset-env": "^8.4.2",
        "stylelint": "^15.7.0",
        "stylelint-config-standard": "^33.0.0"
     }
  }